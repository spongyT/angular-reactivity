{
  "name": "angular",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "test": "jest",
    "test:changed": "jest --onlyChanged",
    "test:ci": "jest --coverage --silent --reporters=\"default\" --reporters=\"jest-junit\"",
    "qa": "npm run format:check && npm run translations:check && npm run lint:check && npm run test",
    "lint": "ng lint --fix",
    "lint:check": "ng lint",
    "e2e": "npm run cypress open",
    "format": "prettier --write \"(src|cypress)/**/*.{ts,js,html,scss,json}\"",
    "format:check": "prettier --check \"(src|cypress)/**/*.{ts,js,html,scss,json}\"",
    "translations:extract": "ngx-translate-extract --input ./src --output ./src/translations/en-US.json --output ./src/translations/de-DE.json --format=json --sort && prettier --write \"src/translations/*.json\"",
    "translations:check": "cpx --clean './src/translations/*' ./tmp/translations -v && npm run translations:extract && git diff --no-index --ignore-all-space --exit-code --color ./tmp/translations ./src/translations"
  },
  "dependencies": {
    "@angular-architects/ngrx-toolkit": "^20.5.0",
    "@angular/animations": "^20.0.2",
    "@angular/cdk": "^20.0.0",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.0.2",
    "@angular/forms": "^20.3.9",
    "@angular/material": "^20.2.11",
    "@angular/platform-browser": "^20.0.2",
    "@angular/platform-browser-dynamic": "^20.3.9",
    "@angular/router": "^20.3.9",
    "@biesbjerg/ngx-translate-extract-marker": "^1.0.0",
    "@ngrx/signals": "^20.1.0",
    "@ngx-translate/core": "^16.0.4",
    "eslint": "^8.57.1",
    "ng-mocks": "^14.14.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.5.1",
    "@angular-eslint/schematics": "^20.5.1",
    "@angular-eslint/template-parser": "^20.0.0",
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.9",
    "@hirez_io/observer-spy": "^2.2.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vendure/ngx-translate-extract": "^9.4.2",
    "cpx": "^1.5.0",
    "cypress": "^13.17.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.6.2",
    "ngx-translate-testing": "^7.0.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.3"
  }
}
